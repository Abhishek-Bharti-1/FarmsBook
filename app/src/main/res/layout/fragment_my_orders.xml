<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.suppliers.fragments.MyOrdersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edtxt_background_rounded3"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView8"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/crop_img" />

        <TextView
            android:id="@+id/crop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Rice"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <TextView
            android:id="@+id/price_offered_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="By: Ranjit Kumar"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView31"
            app:layout_constraintStart_toStartOf="@+id/crop_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/crop_name_tv" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="02/05/2023"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView32"
            app:layout_constraintStart_toStartOf="@+id/price_offered_tv"
            app:layout_constraintTop_toBottomOf="@+id/price_offered_tv" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Order Id: 3456767"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/postedByTV"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />

        <TextView
            android:id="@+id/postedByTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Order Completed"
            android:textColor="@color/green2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/textView32" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edtxt_background_rounded3"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView18"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/crop_img" />

        <TextView
            android:id="@+id/textView19_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Rice"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/imageView18" />

        <TextView
            android:id="@+id/textView26_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="By: Ranjit Kumar"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView31_1"
            app:layout_constraintStart_toStartOf="@+id/textView19_1"
            app:layout_constraintTop_toBottomOf="@+id/textView19_1" />

        <TextView
            android:id="@+id/textView31_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="02/05/2023"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView32_1"
            app:layout_constraintStart_toStartOf="@+id/textView26_1"
            app:layout_constraintTop_toBottomOf="@+id/textView26_1" />

        <TextView
            android:id="@+id/textView32_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Order Id: 3456767"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView33_1"
            app:layout_constraintStart_toStartOf="@+id/textView31_1"
            app:layout_constraintTop_toBottomOf="@+id/textView31_1" />

        <TextView
            android:id="@+id/textView33_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Order Cancelled"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView18"
            app:layout_constraintStart_toStartOf="@+id/textView32_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edtxt_background_rounded3"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        tools:layout_editor_absoluteX="-16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView8_2"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@drawable/crop_img" />

        <TextView
            android:id="@+id/textView19_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Rice"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView8_2"
            app:layout_constraintTop_toTopOf="@+id/imageView8_2" />

        <TextView
            android:id="@+id/textView26_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="By: Ranjit Kumar"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView31"
            app:layout_constraintStart_toStartOf="@+id/textView19_2"
            app:layout_constraintTop_toBottomOf="@+id/textView19_2" />

        <TextView
            android:id="@+id/textView31_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="02/05/2023"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView32_2"
            app:layout_constraintStart_toStartOf="@+id/textView26_2"
            app:layout_constraintTop_toBottomOf="@+id/textView26_2" />

        <TextView
            android:id="@+id/textView32_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Order Id: 3456767"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toTopOf="@+id/textView33_2"
            app:layout_constraintStart_toStartOf="@+id/textView31_2"
            app:layout_constraintTop_toBottomOf="@+id/textView31_2" />

        <TextView
            android:id="@+id/textView33_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Pending Order"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8_2"
            app:layout_constraintStart_toStartOf="@+id/textView32_2" />

        <TextView
            android:id="@+id/acceptBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Now"
            android:textColor="@color/green2"
            android:textSize="16sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/button_background_rounded_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>